@page "/"
@using FizzBuzz.Web.Models
@using FizzBuzz.Web.Services
@using FizzBuzz.Web.Interfaces
@inject IFizzBuzzService FizzBuzzService
@rendermode InteractiveServer

<PageTitle>FizzBuzz Game</PageTitle>

<div class="container mt-4">
    <h1 class="mb-4">FizzBuzz Game</h1>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Configuration</h5>
            
            <div class="row mb-3">
                <div class="col-md-3">
                    <label for="startInput" class="form-label">Start:</label>
                    <input type="number" 
                           id="startInput"
                           class="form-control" 
                           @bind="start" 
                           min="1" 
                           max="10000" />
                </div>
                <div class="col-md-3">
                    <label for="endInput" class="form-label">End:</label>
                    <input type="number" 
                           id="endInput"
                           class="form-control" 
                           @bind="end" 
                           min="1" 
                           max="10000" />
                </div>
            </div>

            <div class="mb-3">
                <button class="btn btn-primary me-2" @onclick="Generate">
                    <i class="bi bi-play-fill"></i> Generate
                </button>
                <button class="btn @GetButtonClass(includeFuzz) me-2" @onclick="ToggleFuzz">
                    Include Fuzz (รท4)
                </button>
                <button class="btn @GetButtonClass(includeJazz) me-2" @onclick="ToggleJazz">
                    Include Jazz (รท9)
                </button>
                <button class="btn @GetButtonClass(reverse)" @onclick="ToggleReverse">
                    Reverse
                </button>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <strong>Error:</strong> @errorMessage
                </div>
            }
        </div>
    </div>

    @if (results != null && results.Results.Length > 0)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Results (@results.Count items)</h5>
                <pre class="console-output">@string.Join(", ", results.Results)</pre>
            </div>
        </div>
    }
</div>

<style>
    .console-output {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        padding: 1rem;
        font-family: 'Courier New', Courier, monospace;
        font-size: 14px;
        line-height: 1.6;
        white-space: pre-wrap;
        word-wrap: break-word;
        color: #212529;
        margin: 0;
    }
</style>

@code {
    private int start = 1;
    private int end = 100;
    private bool includeFuzz = false;
    private bool includeJazz = false;
    private bool reverse = false;
    private FizzBuzzResponse? results;
    private string errorMessage = string.Empty;

    private void Generate()
    {
        try
        {
            errorMessage = string.Empty;
            
            var request = new FizzBuzzRequest
            {
                Start = start,
                End = end,
                IncludeFuzz = includeFuzz,
                IncludeJazz = includeJazz,
                Reverse = reverse
            };

            results = FizzBuzzService.Generate(request);
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
            results = null;
        }
    }

    private void ToggleFuzz()
    {
        includeFuzz = !includeFuzz;
    }

    private void ToggleJazz()
    {
        includeJazz = !includeJazz;
    }

    private void ToggleReverse()
    {
        reverse = !reverse;
    }

    private string GetButtonClass(bool isActive)
    {
        return isActive ? "btn-success" : "btn-outline-secondary";
    }
}
